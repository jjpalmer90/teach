<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
    <%= devise_error_messages! %>
    <fieldset>
      <legend>Sign up</legend>
        <%= f.input :first_name, :input_html => {:maxlength =>25, :style=> 'width: 250px'}%>
        <%= f.input :last_name, :input_html => {:maxlength =>35, :style=> 'width: 250px'} %>
        <%= f.input :email, :autofocus => true, :input_html => {:maxlength =>75, :style=> 'width: 350px'}%>
        <%= f.input :phone, :input_html => {:maxlength =>10, :style=> 'width: 100px'}%>

        <%= f.input :password, :input_html => {:maxlength =>50, :style=> 'width: 150px'} %>
        <%= f.input :password_confirmation, :input_html => {:maxlength =>50, :style=> 'width: 150px'} %>

        <div><%= f.button :submit, "Sign up" %></div>
    </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
